	<select id="listofAssetPlanInfoForReport" parameterType="map" resultMap="BaseResultMap">
  		select * from AssetPlanInfoReportView
  		<!-- <if test="_parameter != null">
    		<include refid="condition_sql"></include>
    	</if> -->
    	order by AssetPlanID desc
	</select>
  
  
	<select id="getDataForPieChart" resultType="com.h3c.platform.assetplan.entity.AssetInfoReportEntity">
  		SELECT assetmodel as assetmodel,SUM(NopassMoney) as pieChartMoney FROM  
  		AssetPlanInfoReportView GROUP BY assetmodel
	</select>
  
	<select id="getDataForDept2BarChart" resultType="com.h3c.platform.assetplan.entity.AssetInfoReportEntity">
  		SELECT dept2code as dept2code,dept2name as dept2name, SUM(NopassMoney) as barChartMoney FROM  
  		AssetPlanInfoReportView GROUP BY dept2code,dept2name
	</select>
	
	<select id="getDataForDept3BarChart" resultType="com.h3c.platform.assetplan.entity.AssetInfoReportEntity">
  		SELECT dept3code as dept3code,dept3name as dept3name, SUM(NopassMoney) as barChartMoney FROM  
  		AssetPlanInfoReportView GROUP BY dept3code,dept3name
	</select>
	
	<select id="getDataForLineChart" resultType="com.h3c.platform.assetplan.entity.AssetInfoReportEntity">
  		SELECT applymonth as applymonth,SUM(NopassMoney) as lineChartMoney FROM  
  		AssetPlanInfoReportView GROUP BY applymonth
	</select>
  

  
  
  
	
  
