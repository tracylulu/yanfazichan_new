<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.h3c.platform.assetplan.dao.AssetPlanInfoApplyViewMapper">
 
	<sql id="condition_sql">
		<where>
			DeleteFlag=1 and OutTimePlanEnum=-1
			<if test="param.ApplyUser !=null">
				and ApplyUser = #{param.ApplyUser}
			</if>
			<if test="param.APStage !=null">
				and APStage = #{param.APStage}
			</if>
			<if test="param.ApplyMonth !=null">
				and ApplyMonth = #{param.ApplyMonth}
			</if>
			
		</where>
	</sql>
		
  <select id="getSumTotalMoneyForDraft" parameterType="map" resultType="java.lang.String">
  	select SUM(TotalMoney) as m from AssetPlanInfoApplyView
  		<if test="_parameter != null">
    		<include refid="condition_sql"></include>
    	</if>
  
  </select>
  

  <select id="listofDraftDetail" parameterType="map" resultType="com.h3c.platform.assetplan.entity.AssetPlanInfoAll">
  	select * from AssetPlanInfoApplyView
  		<if test="_parameter != null">
    		<include refid="condition_sql"></include>
    	</if>
	order by CompleteSetCode asc,AssetPlanID desc		
  
  </select>

  
 
</mapper>