<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.h3c.platform.common.dao.ManufacturerInfoMapper">
  
  <select id="getManufacturerInfoByName" resultMap="BaseResultMap"  parameterType="string">
  	select <include refid="Base_Column_List"></include> from ManufacturerInfo
  	<where>
  		delete_flag=1
  		<if test="name!=null and name!=''">
  			and (manufacturer_name like CONCAT('%',#{name},'%')
  			or manufacturer_cn like CONCAT('%',#{name},'%')) 
  		</if>
  	</where>
  </select>
</mapper>